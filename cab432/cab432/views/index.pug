extends layout

block content
  main
    section.search-section.home-search
      .masthead.text-center
        img(src='./images/kowalski.png', alt='Italian Trulli')
        .container
          .row
            .col-lg-8.mx-md-auto
              a(href='/')
                h1#heading Kowalski Analysis
              form(action = 'result', method='get')
                input.search-field(type='text',name="search_query" placeholder='Search Here.... ')
                button(type='submit')
                  i.fas.fa-search
  button#toggle.btn.btn-success(type='button',value='on', onclick="stoplive(5000)") Running Live
  section.topics
    .container
      .row
        .col-xl-4.col-md-6
          .topics-wrapper.border-style
            h3  Word Cloud 
            #myChart
        .col-xl-4.col-md-6
          .topics-wrapper.border-style
            h3 Sentiments of tweets
            svg#fillgauge(width='100%' height='400px',display ='none')
              p#legend 0% Negative.        50% - Neutral.       100% Positive.

  #text

  script.
    window.onload = function(){
      tweetWriter(!{resultarray});
      var sentimentball = ((!{sentiment}) - (-0.5))/(1)*100;
      var config = liquidFillGaugeDefaultSettings();
      var gauge = loadLiquidFillGauge("fillgauge", sentimentball, config);
      parsewords(!{impwords});
      loadlive(5000);
    }
  script(src='main.js', language='JavaScript')